#FoodItems = [1,2,3,4]
#Price=(100,150,175,200)
n = int(input("Order your food with Quantity :"))
List=['Veg Biriyani','Veg Fried Rice','Paneer Biriyani','Dahi Tadka','Paneer Butter Masala']
Tuple=('380','270','450','170','290')
i=1
while(i<=n):
    item=input("Enter the item you wish to eat:")
    index=List.index(item) 
    print(f"{item}--{Tuple[index]}")
    i+=1